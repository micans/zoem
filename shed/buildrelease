#!/bin/bash

set -euo pipefail

version=$(cat VERSION)
place="slate/rel-$version"

rm -rf $place
mkdir -p $place

shed/bootstrap

cd $place

../../configure CFLAGS=-I$HOME/local/include LDFLAGS=-L$HOME/local/lib --prefix=$HOME/local

make
CFLAGS=-I$HOME/local/include LDFLAGS=-L$HOME/local/lib make distcheck


